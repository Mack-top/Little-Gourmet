# 修复所有Python文件的代码规范问题

# 在项目根目录下创建.flake8配置文件
d:\0000_AI\Kitchen\.flake8
[flake8]
ignore = E203, E266, E501, W503
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    */__pycache__/*,
    *.pyc,
    build,
    dist,
    */build/*,
    */dist/*,
    */.pyc/*,
    venv,
    */venv/*

# 修改代码行长度限制为120字符以避免E501错误
# 忽略一些不重要的格式错误